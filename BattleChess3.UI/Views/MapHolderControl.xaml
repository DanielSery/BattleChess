<UserControl x:Class="BattleChess3.UI.Views.MapHolderController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:BattleChess3.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="350">
    <Grid DataContext="{Binding Source={x:Static views:MainWindow.MapsHolder}, UpdateSourceTrigger=PropertyChanged}">
        <ListBox BorderThickness="0"
                 ItemsSource="{Binding Maps}"
                 Background="{DynamicResource DefaultObjectBrush}"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Image Width="500" Margin="10"
                           Source="{Binding Path=PreviewPath, UpdateSourceTrigger=PropertyChanged}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>