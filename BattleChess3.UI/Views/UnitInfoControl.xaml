<UserControl x:Class="BattleChess3.UI.Views.UnitInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:util="clr-namespace:BattleChess3.UI.Utilities"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Background="{DynamicResource TextBoxBrush}">
    <Viewbox>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="150" />
                <ColumnDefinition Width="*" MinWidth="150" />
            </Grid.ColumnDefinitions>
    
            <StackPanel Grid.Column="0"
                        Orientation="Vertical">
                <TextBlock Text="{util:Loc Info_Name}" />
                <TextBlock Text="{util:Loc Info_UnitType}" />
                <TextBlock Text="{util:Loc Info_Attack}" />
                <TextBlock Text="{util:Loc Info_Defense}" />
                <TextBlock Text="{util:Loc Info_Bonus}" />
                <TextBlock Text="{util:Loc Info_Antibonus}" />
                <TextBlock Text="{util:Loc Info_Cost}" />
                <TextBlock Text="{util:Loc Info_MovingAttack}" />
            </StackPanel>
    
            <StackPanel Grid.Column="1"
                        Orientation="Vertical">
                <TextBlock Text="{Binding Path=Figure.FigureType.ShownName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.UnitType, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.Hp, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.Attack, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.Defence, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.Bonus, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.AntiBonus, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.Cost, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="{Binding Path=Figure.FigureType.MovingWhileAttacking, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>